<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number_a_input"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:maxLength="2"
        android:minHeight="48dp"
        />

    <TextView
        android:id="@+id/plus_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="46sp"
        android:text="+"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number_b_input"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:maxLength="2"
        android:minHeight="48dp"
        />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sumar"
        />

    <TextView
        android:id="@+id/sum_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="46sp"
        android:text="= 0"
    />

    <Button
        android:id="@+id/bIrSecondActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a la segunda actividad"
    />

    <Button
        android:id="@+id/cerrarAppbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar App"
 />

</LinearLayout>